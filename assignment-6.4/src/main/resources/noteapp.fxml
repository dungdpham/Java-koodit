<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.NoteController"
      alignment="CENTER"
      spacing="10">
    <TextField fx:id="titleField" promptText="Enter Title"/>
    <TextArea fx:id="contentArea" promptText="Enter Note Content"/>
    <Button text="Add" onAction="#addNote"/>
    <TextArea fx:id="displayArea" />
</VBox>
